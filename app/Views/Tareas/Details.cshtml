@model TaskManager.Models.Tarea

@{
    ViewData["Title"] = "Details";
}

<h1 class="mt-5">Detalles de la Tarea</h1>

<div>
    <h4>Tarea</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la tarea
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreTarea)
        </dd>
        <dt class = "col-sm-2">
            Descripción corta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescTarea)
        </dd>
        <dt class = "col-sm-2">
            Dificultad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dificultad)
        </dd>
        <dt class = "col-sm-2">
            Tiempo aproximado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tiempo)
        </dd>
        <dt class = "col-sm-2">
            Lista
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdListaNavigation.NombreLista)
        </dd>
        <dt class = "col-sm-2">
            Responsable
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdResponsableNavigation.NombreCompletoResponsable)
        </dd>
    </dl>
</div>
<div>
    <a style="text-decoration: none;" class="bi bi-pencil-fill" asp-action="Edit" asp-route-id="@Model?.IdTarea"><b> Editar Tarea</b></a> |
    <a style="text-decoration: none;" class="bi bi-arrow-return-left" asp-controller="Home" asp-action="Index"><b> Volver al tablero</b></a>
</div>
